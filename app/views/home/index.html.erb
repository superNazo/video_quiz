<div class="container">
  <div class="jumbotron jumbotron-login">
    <% if user_signed_in? %>
      <h2>You are logged in as:</h2>
      <h3><%= current_user.name %></h3>
      <img src="<%= current_user.image %>" class="avatar">
      <%= link_to "Log out", destroy_user_session_path, method: :delete,  class: "link-to btn btn-success" %>
    <% else %>
      <h1>Experience a New level of Interviewing</h1>
      <!-- <button class=""> -->
        <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "link-to btn btn-success btn-wide" %>
      <!-- </button> -->
    <% end %>
  </div>
</div>
