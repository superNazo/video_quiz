var videoQuiz = angular.module('videoQuiz', ['ngRoute', 'quizzesControllers']);

videoQuiz.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when('/new_quiz', {
        templateUrl: '<%= asset_path "newQuiz.html" %>',
        controller: 'newQuizCtrl'
      });
  }]);

videoQuiz.config(["$httpProvider", function($httpProvider) {
  $httpProvider.defaults.headers.common['X-CSRF-Token'] = $('meta[name=csrf-token]').attr('content');
}]);
